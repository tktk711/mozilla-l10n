#. # LOCALIZATION NOTE (responsive.editDeviceList): option displayed in the device
#. # selector
#: responsive.editDeviceList
msgid "Edit list…"
msgstr "Golygu'r rhestr…"

#. # LOCALIZATION NOTE (responsive.exit): tooltip text of the exit button.
#: responsive.exit
msgid "Close Responsive Design Mode"
msgstr "Cau'r Modd Cynllunio Ymatebol"

#. # LOCALIZATION NOTE (responsive.deviceListLoading): placeholder text for
#. # device selector when it's still fetching devices
#: responsive.deviceListLoading
msgid "Loading…"
msgstr "Llwytho…"

#. # LOCALIZATION NOTE (responsive.deviceListError): placeholder text for
#. # device selector when an error occurred
#: responsive.deviceListError
msgid "No list available"
msgstr "Dim rhestr ar gael"

#. # LOCALIZATION NOTE (responsive.done): button text in the device list modal
#: responsive.done
msgid "Done"
msgstr "Gorffen"

#. # LOCALIZATION NOTE (responsive.noDeviceSelected): placeholder text for the
#. # device selector
#: responsive.noDeviceSelected
msgid "no device selected"
msgstr "heb ddewis dyfais"

#. # LOCALIZATION NOTE  (responsive.title): the title displayed in the global
#. # toolbar
#: responsive.title
msgid "Responsive Design Mode"
msgstr "Modd Cynllunio Ymatebol"

#. # LOCALIZATION NOTE (responsive.enableTouch): tooltip text for the touch
#. # simulation button when it's disabled
#: responsive.enableTouch
msgid "Enable touch simulation"
msgstr "Galluogi efelychiad cyffwrdd"

#. # LOCALIZATION NOTE (responsive.disableTouch): tooltip text for the touch
#. # simulation button when it's enabled
#: responsive.disableTouch
msgid "Disable touch simulation"
msgstr "Analluogi efelychiad cyffwrdd"

#. # LOCALIZATION NOTE  (responsive.screenshot): tooltip of the screenshot button.
#: responsive.screenshot
msgid "Take a screenshot of the viewport"
msgstr "Cymryd llun sgrin o'r porth gweld"

#. # LOCALIZATION NOTE (responsive.screenshotGeneratedFilename): The auto generated
#. # filename.
#. # The first argument (%1$S) is the date string in yyyy-mm-dd format and the
#. # second argument (%2$S) is the time string in HH.MM.SS format.
#: responsive.screenshotGeneratedFilename
msgid "Screen Shot %1$S at %2$S"
msgstr "Llun Sgrin %1$S yn %2$S"

#. # LOCALIZATION NOTE (responsive.remoteOnly): Message displayed in the tab's
#. # notification box if a user tries to open Responsive Design Mode in a
#. # non-remote tab.
#: responsive.remoteOnly
msgid ""
"Responsive Design Mode is only available for remote browser tabs, such as "
"those used for web content in multi-process Firefox."
