#. # Mobile Sync
#. # %S is the date and time at which the last sync successfully completed
#: lastSync2.label
msgid "Last sync: %S"
msgstr "Cydweddiad diwethaf: %S"

#: lastSyncInProgress2.label
msgid "Last sync: in progress…"
msgstr "Cydweddiad diwethaf: ar waith…"

#. # %S is the username logged in
#: account.label
msgid "Account: %S"
msgstr "Cyfrif: %S"

#: notconnected.label
msgid "Not connected"
msgstr "Heb gysylltu"

#: connecting.label
msgid "Connecting…"
msgstr "Cysylltu…"

#: notificationDisconnect.label
msgid "Your Firefox Sync account has been removed"
msgstr "Mae eich cyfrif Firefox Sync wedi ei dynnu"

#: notificationDisconnect.button
msgid "Undo"
msgstr "Dadwneud"

#. # LOCALIZATION NOTE (sync.clientUpdate, sync.remoteUpdate):
#. # #1 is the "application name"
#. # #2 is the "version"
#: sync.update.client
msgid ""
"#1 #2 is not compatible with the latest version of Firefox Sync. Please "
"update to the latest version."
msgstr ""
"Nid yw #1 #2 yn cydweddu gyda'r fersiwn diweddaraf o Firefox Sync. "
"Diweddarwch i'r fersiwn diweddaraf."

#: sync.update.remote
msgid ""
"#1 #2 is not compatible with older versions of Firefox Sync. Please update "
"Firefox on your other computer(s)."
msgstr ""
"Nid yw #1 #2 yn cydweddu gyda fersiynau hŷn o Firefox Sync. Diweddarwch "
"Firefox ar eich cyfrifiadur(on) eraill."

#: sync.update.title
msgid "Firefox Sync"
msgstr "Firefox Sync"

#: sync.update.button
msgid "Learn More"
msgstr "Dysgu Rhagor"

#: sync.update.close
msgid "Close"
msgstr "Cau"

#: sync.setup.error.title
msgid "Cannot Setup Sync"
msgstr "Methu Gosod Sync"

#: sync.setup.error.network
msgid "No internet connection available"
msgstr "Dim cysylltiad rhyngrwyd ar gael"

#: sync.setup.error.nodata
msgid "%S could not connect to Sync. Would you like to try again?"
msgstr "Mae %S yn methu cysylltu â Sync. Hoffech chi geisio eto?"

#: sync.setup.tryagain
msgid "Try again"
msgstr "Ceisio eto"

#: sync.setup.manual
msgid "Manual setup"
msgstr "Gosod gyda llaw"

#: sync.message.notabs
msgid "No tabs from your other computers."
msgstr "Dim tabiau o'ch cyfrifiaduron eraill."

#. # LOCALIZATION NOTE (promoBanner.message.text): First part of the message displayed in a
#. # banner on about:home. The final space separates this text from the link.
#: promoBanner.message.text
msgid "Sync is brand new and easier than ever. "
msgstr "Mae Sync yn newydd sbon ac yn haws nag erioed. "

#. # LOCALIZATION NOTE (promoBanner.message.link): Second part of the message, styled as a link.
#: promoBanner.message.link
msgid "Tap here to learn more"
msgstr "Tapiwch yma i ddysgu rhagor"
